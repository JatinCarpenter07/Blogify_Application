<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Dashboard - Users</title>
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        h3.section-heading {
            margin-top: 2rem;
            margin-bottom: 1rem;
            color: #0d6efd;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <%- include('./partials/navbar') %>

    <div class="container py-5">
        <h2 class="fw-bold text-primary mb-4">üë• Dashboard - Users</h2>

        <!-- Admin Section -->
        <h3 class="section-heading">üõ°Ô∏è Admins</h3>
        <% users.filter(u => u.role === 'admin').forEach(user => { %>
        <div class="row bg-white rounded shadow-sm px-3 py-3 mb-3 g-0 align-items-center">
            <!-- Left: Profile -->
            <div class="col-md-6 col-12 mb-2 mb-md-0 d-flex align-items-center gap-3">
                <img src="<%= user.profileImage || '/images/defaultProfile.png' %>" alt="profile"
                     class="rounded-circle border border-2" width="50" height="50"
                     style="object-fit: cover;">
                <div>
                    <h6 class="mb-1"><%= user.Name %></h6>
                    <small class="fst-italic text-muted"><%= user.email %></small>
                </div>
            </div>

            <!-- Center: Created Date -->
            <div class="col-md-3 col-12 d-flex align-items-center justify-content-md-center justify-content-start gap-2 mb-2 mb-md-0 text-muted">
                <i class="bi bi-calendar3"></i>
                <span><%= user.createdAt.toDateString() %></span>
            </div>

            <!-- Right: Buttons -->
            <div class="col-md-3 col-12 d-flex justify-content-md-end justify-content-end gap-2 flex-wrap">
                <a href="/admin/profile/<%= user._id %>" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <a href="/admin/removeAdmin/<%= user._id %>" class="btn btn-outline-danger btn-sm ">
                    <i class="bi bi-shield-lock"></i>Remove Admin
                </a>
                <a href="/admin/removeUser/<%= user._id %>" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash3-fill"></i> Remove
                </a>
            </div>
        </div>
        <% }) %>

        <h3 class="section-heading">üõ°Ô∏è Admins- Authors ‚úçÔ∏è</h3>
        <% users.filter(u => u.role === 'adminAuthor').forEach(user => { %>
        <div class="row bg-white rounded shadow-sm px-3 py-3 mb-3 g-0 align-items-center">
            <div class="col-md-6 col-12 mb-2 mb-md-0 d-flex align-items-center gap-3">
                <img src="<%= user.profileImage || '/images/defaultProfile.png' %>" alt="profile"
                     class="rounded-circle border border-2" width="50" height="50"
                     style="object-fit: cover;">
                <div>
                    <h6 class="mb-1"><%= user.Name %></h6>
                    <small class="fst-italic text-muted"><%= user.email %></small>
                </div>
            </div>
            <div class="col-md-3 col-12 d-flex align-items-center justify-content-md-center justify-content-start gap-2 mb-2 mb-md-0 text-muted">
                <i class="bi bi-calendar3"></i>
                <span><%= user.createdAt.toDateString() %></span>
            </div>
            <div class="col-md-3 col-12 d-flex justify-content-md-end justify-content-end gap-2 flex-wrap">
                <a href="/admin/profile/<%= user._id %>" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <a href="/admin/removeAdmin/<%= user._id %>" class="btn btn-outline-danger btn-sm ">
                    <i class="bi bi-shield-lock"></i>Remove Admin
                </a>
                <a href="/admin/removeUser/<%= user._id %>" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash3-fill"></i> Remove
                </a>
            </div>
        </div>
        <% }) %>

        <!-- Author Section -->
        <h3 class="section-heading">‚úçÔ∏è Authors</h3>
        <% users.filter(u => u.role === 'author').forEach(user => { %>
        <div class="row bg-white rounded shadow-sm px-3 py-3 mb-3 g-0 align-items-center">
            <div class="col-md-6 col-12 mb-2 mb-md-0 d-flex align-items-center gap-3">
                <img src="<%= user.profileImage || '/images/defaultProfile.png' %>" alt="profile"
                     class="rounded-circle border border-2" width="50" height="50"
                     style="object-fit: cover;">
                <div>
                    <h6 class="mb-1"><%= user.Name %></h6>
                    <small class="fst-italic text-muted"><%= user.email %></small>
                </div>
            </div>
            <div class="col-md-3 col-12 d-flex align-items-center justify-content-md-center justify-content-start gap-2 mb-2 mb-md-0 text-muted">
                <i class="bi bi-calendar3"></i>
                <span><%= user.createdAt.toDateString() %></span>
            </div>
            <div class="col-md-3 col-12 d-flex justify-content-md-end justify-content-end gap-2 flex-wrap">
                <a href="/admin/profile/<%= user._id %>" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <a href="/admin/makeAdmin/<%= user._id %>" class="btn btn-outline-success btn-sm">
                    <i class="bi bi-shield-lock"></i> Make Admin
                </a>
                <a href="/admin/removeUser/<%= user._id %>" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash3-fill"></i> Remove
                </a>
            </div>
        </div>
        <% }) %>

        <!-- Viewer Section -->
        <h3 class="section-heading">üëÄ Viewers</h3>
        <% users.filter(u => u.role === 'viewer').forEach(user => { %>
        <div class="row bg-white rounded shadow-sm px-3 py-3 mb-3 g-0 align-items-center">
            <div class="col-md-6 col-12 mb-2 mb-md-0 d-flex align-items-center gap-3">
                <img src="<%= user.profileImage || '/images/defaultProfile.png' %>" alt="profile"
                     class="rounded-circle border border-2" width="50" height="50"
                     style="object-fit: cover;">
                <div>
                    <h6 class="mb-1"><%= user.Name %></h6>
                    <small class="fst-italic text-muted"><%= user.email %></small>
                </div>
            </div>
            <div class="col-md-3 col-12 d-flex align-items-center justify-content-md-center justify-content-start gap-2 mb-2 mb-md-0 text-muted">
                <i class="bi bi-calendar3"></i>
                <span><%= user.createdAt.toDateString() %></span>
            </div>
            <div class="col-md-3 col-12 d-flex justify-content-md-end justify-content-end gap-2 flex-wrap">
                <a href="/admin/profile/<%= user._id %>" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-person-circle"></i> Profile
                </a>
                <a href="/admin/makeAdmin/<%= user._id %>" class="btn btn-outline-success btn-sm">
                    <i class="bi bi-shield-lock"></i> Make Admin
                </a>
                <a href="/admin/removeUser/<%= user._id %>" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash3-fill"></i> Remove
                </a>
            </div>
        </div>
        <% }) %>
    </div>

    <%- include('./partials/footer') %>
    <%- include('./partials/script') %>
</body>
</html>
